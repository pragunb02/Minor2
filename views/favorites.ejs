<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Favorite Books</title>
    <!-- Add your CSS links and scripts here -->
    <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/style.css">
    <style>
        /* Reset some default styling */
body, h1, h2, p {
    margin: 0;
    padding: 0;
}

/* Style the main container */
.big-contain {
    display: flex;
    justify-content: space-around;
    margin: 20px;
}

/* Style the book container */
.book-container {
    display: flex;
}

/* Style the book image */
.book-image img {
    max-width: 250px; /* Increased image size */
    height: auto;
    border: 1px solid #ddd;
    border-radius: 4px;
}

/* Style the book details */
.book-details {
    margin-left: 7rem;
    margin-right: 15rem;
    display: flex;
    flex-direction: column;
}

#book-p {
    font-size: 20px; /* Adjust as needed */
    font-weight: bold;
    border-color: black;
}

.book-details h3 {
    margin-bottom: 20px; /* Adjust as needed */
}

.book-details h5 {
    margin-top: 15px; /* Adjust as needed */
}

.book-details h1 {
    font-size: 24px;
    margin-bottom: 10px;
}

.book-details p {
    margin-bottom: 5px;
}

/* Style the product details section */
.book-details h3 {
    font-size: 23px;
    margin-top: 40px;
}

.book-details h5 {
    font-size: 18px;
    margin-bottom: 5px;
}

.bigger-contain {
    box-shadow: 0 .5rem 1rem rgba(0,0,0,.3);
    padding: .5rem;
    margin: 3rem;
}

/* Style the buy section */
.buy-section {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start; /* Align items to the start (left) */
    margin-left: 20px; /* Add margin to separate from book details */
}

.buy-section button {
    padding: 10px;
    margin-top: 10px;
    font-size: 16px;
    cursor: pointer;
    background-color: #4CAF50;
    color: white;
    border: none;
    border-radius: 4px;
}

.buy-section button.add-to-cart {
    background-color: #008CBA;
    margin-top: 22px;
}

.buy-section button:hover, .buy-section button.add-to-cart:hover {
    background-color: #45a049;
}

    </style>
</head>
<body>


    
    <header class="header">

        <div class="header-1">
            <a href="/" class="logo"> <i class="fas fa-book"></i> Book Bazaar </a>

            <form action="/search" class="search-form" method="GET">
                <input type="search" name="q" placeholder="search here..." id="search-box">
                <label for="search-box" class="fas fa-search"></label>
            </form>

            <div id="search-btn" class="fas fa-search" onclick="document.forms[0].submit()"></div>

            <div class="icons">
                <div id="search-btn" class="fas fa-search"></div>

                <a href="#" id="add-book-link" class="fas fa-plus-square"></a>

                <a href="#" class="fas fa-shopping-cart"></a>
                <div id="login-btn" class="fas fa-user" onclick="toggleDropdown()"></div>
                <% if (showDropdown) { %>
                    <div id="account-options" style="display: none;">
                        <div class="user-profile">
                            <span>Welcome, <%= user.name %></span>
                        </div>
                        <ul>
                            <a href="#">Profile</a>
                            <a href="#">Orders</a>
                            <button id="logoutButton">Logout</button>
                        </ul>
                    </div>
                    <% } %>
            </div>

        </div>


        <div class="header-2">
            <nav class="navbar">
                <h2 class="navbar1" style="color:aliceblue">Your Favourite Books </h2>
            </nav>
        </div>

    </header>

    <nav class="bottom-navbar">
        <a href="#home" class="fas fa-home"></a>
        <a href="#featured" class="fas fa-list"></a>
        <a href="#arrivals" class="fas fa-tags"></a>
        <a href="#reviews" class="fas fa-comments"></a>
    </nav>


    <div id="cart-sidebar" class="cart-sidebar">
        <div class="cart-sidebar-content">
            <h3>Your Cart</h3>
            <ul id="cart-items"></ul>
            <p>Total: ₹<span id="cart-total">0</span></p>

            <div class="coupon-section">
                <input type="text" id="coupon-code" placeholder="Enter Coupon Code">
                <button id="apply-coupon-btn">Apply Coupon</button>
            </div>
            <button id="close-cart-btn" class="fas fa-times"></button>
            <button id="checkout-btn">Checkout</button>
        </div>
    </div>


    <div class="login-form-container">

        <div id="close-login-btn" class="fas fa-times"></div>

        <form action="" id="signin">
            <h3>sign in</h3>
            <span>Email</span>
            <input type="email" name="" class="box" placeholder="Enter your email" id="">
            <span>password</span>
            <input type="password" name="" class="box" placeholder="Enter your password" id="">
            <input type="submit" value="sign in" class="btn">
            <p>Forgot password ? <a href="/auth/forgot-password">Click here</a></p>
            <p>Don't have an account ? <a href="/registration.html">Create one</a></p>
        </form>

    </div>

    <!-- Display favorite books here -->
    <% if (favorites.length > 0) { %>
        <% favorites.forEach(function(book) { %>
            <div class="bigger-contain">
                <div class="big-contain">
                    <div class="book-container">
                        <div class="book-image">
                            <img src="<%= book.image %>" alt="<%= book.title %>">
                        </div>
                        <div class="big-books">
                            <div class="book-details">
                                <h1><%= book.title %></h1>
                                <p id="book-p">Price: ₹<span id="book-price"><%= book.price %></span></p>
                                <h3>Product Details</h3>
                                <h5>Author: <%= book.author %></h5>
                                <h5>Publisher: <%= book.publisher %></h5>
                                <h5>Language: <%= book.language %></h5>
                                <h5>Category: <%= book.category %></h5>
                                <!-- <h5>Description: <%= book.description %></h5> -->
                            </div>
                        </div>
                    </div>
                    <div class="buy-section">
                        

                        <button onclick="buyNow()">Buy Now</button>
                        <button class="btn add-to-cart" data-name="<%= book.title %>" data-price="<%= book.price %>"
                            
                            data-image="<%= book.image %>">Add to Cart</button>
                            <button class="remove-from-favorites-btn" onclick="removeFromFavorites('<%= book._id %>')">Remove</button>
                    </div>
                </div>
            </div>
        <% }); %>
    <% } else { %>
        <h1>No Favorite Books </h1>
    <% } %>

    <!-- Add your scripts here -->
    <!-- <script src="your_scripts.js"></script> -->
    <script src="https://unpkg.com/swiper@7/swiper-bundle.min.js"></script>

    <script src="/style.js"></script>
    <script src="/add_book.js"></script>
    <script src="/cart.js"></script>
    <script src="/sign_in.js"></script>
    <script src="https://unpkg.com/swiper@7/swiper-bundle.min.js"></script>

    <script>
      
        function buyNow(title, price, image) {

            window.location.href = "newPage.html?title=" + encodeURIComponent(title) + "&price=" + encodeURIComponent(price) + "&image=" + encodeURIComponent(image);
        }
        const searchResultsContainer = document.querySelector('.search-results-container');
        const searchResultItems = document.querySelectorAll('.search-result-item');

        let selectedIndex = -1;

        function handleKeyboardEvent(event) {
            switch (event.key) {
                case 'ArrowUp':
                    navigateResults(-1);
                    break;
                case 'ArrowDown':
                    navigateResults(1);
                    break;
                case 'Enter':
                    if (selectedIndex >= 0 && searchResultItems[selectedIndex]) {
                        window.location.href = searchResultItems[selectedIndex].querySelector('a').href;
                    }
                    break;
            }
        }

        function navigateResults(direction) {

            if (selectedIndex >= 0 && searchResultItems[selectedIndex]) {
                searchResultItems[selectedIndex].classList.remove('selected');
            }

            selectedIndex = (selectedIndex + direction + searchResultItems.length) % searchResultItems.length;

            if (searchResultItems[selectedIndex]) {
                searchResultItems[selectedIndex].classList.add('selected');
            }
        }

        

        document.addEventListener('keydown', handleKeyboardEvent);





        function removeFromFavorites(bookId) {
            // console.log(bookId);
        // Send a request to the server to remove the book from favorites
        fetch(`/books/removeFromFavorites?id=${bookId}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            // Optionally, you can send additional data in the request body if needed
            // body: JSON.stringify({ bookId: bookId })
        })
        .then(response => {
            window.location.reload();
        })
        .catch(error => {
            console.error('Error removing book from favorites:', error);
        });
    }
        

        
    </script>

</body>
</html>