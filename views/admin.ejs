// Function to load and display all users
function loadUsers() {
    // Fetch all users from the server
    fetch('/auth/users/all')
        .then(response => response.json())
        .then(users => {
            // Display the list of users
            displayUsers(users);
        })
        .catch(error => console.error('Error:', error));
}
// Function to display the list of users
function displayUsers(users) {
    // Get the container where users will be displayed
    const usersContainer = document.getElementById('usersContainer');
    usersContainer.innerHTML = ''; // Clear previous content
    usersContainer.style.display = 'block';

    // Create a table to display users
    const table = document.createElement('table');
    table.id = 'usersTable';
    table.innerHTML = `
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Blocked</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody></tbody>
    `;

    // Populate the table with user data
    const tbody = table.querySelector('tbody');
    users.forEach(user => {
        const row = document.createElement('tr');
        const blockedClass = user.blocked ? 'blocked-yes' : 'blocked-no';
        row.innerHTML = `
            <td>${user.name}</td>
            <td>${user.email}</td>
            <td class="${blockedClass}">${user.blocked ? 'Yes' : 'No'}</td>
            <td>
                <button class="block-button" onclick="blockUserConfirmation('${user.email}', ${user.blocked})">${user.blocked ? 'Unblock' : 'Block'}</button>
            </td>
        `;
        tbody.appendChild(row);
    });

    // Append the table to the container
    usersContainer.appendChild(table);
}

function blockUserConfirmation(email, blocked) {
    const confirmation = window.confirm(`Are you sure you want to ${blocked ? 'unblock' : 'block'} this user?`);
    if (confirmation) {
        blockUser(email);
    }
}

function blockUser(email) {
    fetch('/auth/users/block', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ email: email })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('Successful!');
            window.location.reload();
        } else {
            // Show an error message
            alert('Failed to block/unblock user: ' + data.message);
        }
    })
    .catch(error => console.error('Error:', error));
}

